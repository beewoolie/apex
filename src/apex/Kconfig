menu "Commands"

config ALLHELP
	bool "Include all online help"
	default y
	depends on SMALL=n
	help
	  Setting this option will include all help text for APEX commands.

config CMD_CHECKSUM
	bool "Checksum Region"
	default y
	help
	  Computes a CCITT CRC32 checksum over a region.

config CMD_COPY
	bool "Copy Regions"
	default y
	help
	  Copies from one region to another.

config CMD_COMPARE
	bool "Compare Regions"
	default y

config CMD_DRVINFO
	bool "Driver Info"
	default y
	help
	  Informational command that reports the status of APEX
	  drivers and services.  This is a good command to omit when
	  trying to make APEX small.

config CMD_DUMP
	bool "Dump Region"
	default y
	help
	  Shows the contents of a region on the console.

config CMD_ENV
	bool "Environment Commands"
	default y

config CMD_ERASEENV
	bool "Erase Environment"
	depends on CMD_ENV=y && ENV_MUTABLE=y
	default n
	help
	  Experimental feature that allows safe, complete erasure of
	  the environment.

config CMD_SETENV
	bool "Set/unset Environment Variable"
	depends on CMD_ENV=y && ENV_MUTABLE=y
	default y

config CMD_ERASE
	bool "Erase Region"
	default y

config CMD_FILL
	bool "Fill Region"
	default y

config CMD_GO
	bool "Go"
	default y
	help
	  Allows transfer of execution to any memory address.

config CMD_INFO
	bool "Info"
	default y
	help
	  Show information about a region descriptor.  Use this command
	  to list the contents of a filesystem directory.

config CMD_PAUSE
	bool "Pause"
	default n

config CMD_WAIT
	bool "Wait"
	default y

config CMD_XRECEIVE
	bool "Xmodem Receive"
	default y

config CMD_EMAC_LH79524
	bool "LH79524 Ethernet MAC" 
	depends on ARCH_LH79524 && DRIVER_EMAC_LH79524
	default y
	help
	  Commands to configure the built-in MAC of the LH79524.

config CMD_EMAC_LH79524_DIAG
	bool "LH79524 Ethernet MAC Diagnostics"
	depends on CMD_EMAC_LH79524
	default n
	help
	  Enable this option to add diagnostic sub-commands to the
	  emac command.  It adds a lot of code to APEX, so leave it
	  out unless you are sure you need it.
endmenu
